<BorderPane id="BorderPane" prefHeight="500" prefWidth="700.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.OrderController">
   <center>
      <TableView fx:id="tableView" prefHeight="200.0" prefWidth="700.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="modelName" prefWidth="122.0" text="Nazwa modelu" />
          <TableColumn fx:id="bikeType" minWidth="6.0" prefWidth="116.0" text="Typ roweru" />
            <TableColumn fx:id="color" prefWidth="117.0" text="Kolor" />
            <TableColumn fx:id="manufacture" prefWidth="176.0" text="Nazwa producenta" />
            <TableColumn fx:id="cost" prefWidth="168.0" text="Cena" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
   <top>
      <BorderPane prefHeight="108.0" prefWidth="700.0" BorderPane.alignment="CENTER">
         <top>
            <Button fx:id="searchButton" mnemonicParsing="false" text="Search" BorderPane.alignment="CENTER">
               <graphic>
                  <TextField fx:id="searchTextField" prefWidth="402.0" />
               </graphic></Button>
         </top>
         <left>
            <Label prefHeight="30.0" prefWidth="146.0" text="Wybrany model:" BorderPane.alignment="CENTER">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
               <BorderPane.margin>
                  <Insets left="10.0" />
               </BorderPane.margin>
            </Label>
         </left>
         <center>
            <Label fx:id="bikeLabel" prefHeight="20.0" prefWidth="308.0" BorderPane.alignment="CENTER">
               <font>
                  <Font name="System Italic" size="14.0" />
               </font></Label>
         </center>
         <right>
            <Button mnemonicParsing="false" onAction="#pickBikeToOrder" prefHeight="42.0" prefWidth="193.0" text="PrzejdÅº do wprowadzenia danych" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets right="10.0" />
               </BorderPane.margin>
            </Button>
         </right>
      </BorderPane>
   </top>
</BorderPane>
